<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog App - Home</title>
    <link rel="stylesheet" href="/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    //will be executed if there are posts 
    <% if(locals.posts && posts.length>0){ %>
    <div class="main">
      <%- include("partials/header.ejs") %>
      <div class="center">
        <button
          onclick="window.location.href='/newPost'"
          class="create-new"
          type="submit"
          method="POST"
        >
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              width="24"
              height="24"
            >
              <path fill="none" d="M0 0h24v24H0z"></path>
              <path
                fill="currentColor"
                d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"
              ></path>
            </svg>
            Create
          </span>
        </button>
      </div>
      <div class="blogs">
        <% posts.forEach((posts) => { %>
        <div class="blog">
          <h1><%= posts.title %></h1>
          <p><%= posts.content %></p>
        </div>
        <% }); %>
      </div>

      <%- include("partials/footer.ejs") %>
    </div>

    //will be executed if there are no posts i.e homepage 
    <% }else{ %>

    <div class="main">
      <%- include("partials/header.ejs") %>

      <div class="hero">
        <div class="container">
          <h1>Create your Blog here</h1>
          <button
            onclick="window.location.href='/newPost'"
            class="create"
            type="submit"
          >
            <span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="24"
                height="24"
              >
                <path fill="none" d="M0 0h24v24H0z"></path>
                <path
                  fill="currentColor"
                  d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"
                ></path>
              </svg>
              Create
            </span>
          </button>
        </div>
      </div>

      <%- include("partials/footer.ejs") %>
    </div>
    <% } %>
  </body>
</html>
